#include "stm32f4xx.h"
#include "uart.h"

#define UART2EN 	(1U<<17)
#define GPIOAEN		(1U<<0)
#define CR1_TE		(1U<<3)
#define CR1_RE		(1U<<2)
#define CR1_UE		(1U<<13)
#define SR_TXE 		(1U<<7)

#define UART_BAUDRATE 	115200
#define CLK				16000000

static void set_baud(uint32_t periph_clk, uint32_t baudrate);
static void write_uart(int ch);

int __io_putchar(int ch)
{
	write_uart(ch);
	return ch;
}

void uart2_tx_init(void)
{
	/***************Configure GPIO PIN*******************/
	/*1.Enable clock to GPIO PA2*/
	RCC->AHB1ENR |= GPIOAEN;

	/*2.Set PA2 to alternate function mode*/
	GPIOA->MODER |=  (1U<<5);
	GPIOA->MODER &= ~(1U<<4);

	/*3.Set PA2 TO MODE AF7(UART2_TX*/
	GPIOA->AFR[0] &= ~(1U<<11);
	GPIOA->AFR[0] |=  (1U<<10);
	GPIOA->AFR[0] |=  (1U<<9);
	GPIOA->AFR[0] |=  (1U<<8);

	/***************Configure Uart Module****************/
	/*4. Enable clock access to uart2*/
	RCC->APB1ENR |= UART2EN;
	/*5. Set Baudrate*/
	set_baud(CLK, UART_BAUDRATE);

	/*6. Set transfer direction*/
	USART2->CR1 = CR1_TE;

	/*7. Enable uart module*/
	USART2->CR1 |= CR1_UE;
}

static void write_uart(int ch)
{
	/*wait for txe empty*/
	while(!(USART2->SR & SR_TXE));

	/*write the data register*/
	USART2->DR = (ch & 0xff);
}

static void set_baud(uint32_t periph_clk, uint32_t baudrate)
{
	USART2->BRR = ((periph_clk + (baudrate/2U))/baudrate);
}

